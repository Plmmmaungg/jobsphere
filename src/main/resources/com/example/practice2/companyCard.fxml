<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane maxHeight="248" maxWidth="178" minHeight="248" minWidth="178" prefHeight="248" prefWidth="178"
           style="-fx-background-color: white; -fx-border-color: transparent; -fx-border-radius: 20; -fx-background-radius: 20; -fx-cursor: hand;"
           xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.practice2.CompanyCardController">

    <children>
        <!-- Centered logo with inline styling -->
        <VBox fx:id="cardBox" alignment="CENTER" prefHeight="248" prefWidth="178" spacing="10"
              style="-fx-padding: 10; -fx-background-color: #ffffff; -fx-border-radius: 20; -fx-background-radius: 20; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-cursor: hand;"
              onMouseEntered="#onCardHover"
              onMouseExited="#onCardExit"
              onMousePressed="#onCardPress"
              onMouseReleased="#onCardRelease">
            <ImageView fx:id="logoImage" fitHeight="120" fitWidth="120" preserveRatio="true" />
        </VBox>


        <!-- Small top-right button -->
        <AnchorPane pickOnBounds="false">
            <Button fx:id="deleteButton" onAction="#onDeleteButtonClick" prefHeight="25" prefWidth="25" rotate="90"
                    stylesheets="@css/card.css" text="•••" AnchorPane.rightAnchor="5" AnchorPane.topAnchor="5" />
        </AnchorPane>
    </children>
</StackPane>
